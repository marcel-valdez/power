{
  "name": "power",
  "version": "0.0.1",
  "description": "Power the 1v1 turn-based strategy game",
  "main": "index.mjs",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "./handle_watched_file.sh run_all_tests.mjs",
    "start-web-server-dev": "./local-web-server.sh --start",
    "start-web-server-dist": "./local-web-server.sh --start --type dist",
    "stop-web-server": "./local-web-server.sh --stop",
    "markdown": "$(npm bin)/markdown README.md --flavor gfm --context marcel-valdez/power > ./dist/rules.html",
    "build": "$(npm bin)/gulp",
    "build-start": "npm run build && npm run markdown && npm run start-web-server-dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcel-valdez/power.git"
  },
  "keywords": [
    "power",
    "chess",
    "game",
    "strategy",
    "board-game",
    "turn-based"
  ],
  "author": "Marcel Valdez",
  "license": "BSL-1.0",
  "bugs": {
    "url": "https://github.com/marcel-valdez/power/issues"
  },
  "homepage": "https://github.com/marcel-valdez/power#readme",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-minify": "^3.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-rollup": "^2.17.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-terser-js": "^5.1.2",
    "local-web-server": "^4.0.0",
    "markdown-to-html": "0.0.13"
  }
}
